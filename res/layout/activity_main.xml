<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<FrameLayout
		android:id="@+id/fragment_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<RelativeLayout
		android:id="@+id/actionbar_background"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:orientation="horizontal">

		<LinearLayout
			android:id="@+id/btn_markers_container"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:orientation="vertical">

			<View
				style="@style/NavigationSpacer"
				android:background="@drawable/nav_markers_gradient" />

			<ImageButton
				style="@style/NavigationButton"
				android:id="@+id/btn_markers"
				android:src="@drawable/ic_ab_markers"
				android:background="@color/nav_markers_button" />

			<View
				style="@style/NavigationLine"
				android:background="@color/nav_markers_line" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/btn_sectors_container"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_toLeftOf="@id/btn_markers_container"
			android:orientation="vertical">

			<View
				style="@style/NavigationSpacer"
				android:background="@drawable/nav_sectors_gradient" />


			<TextView
				style="@style/NavigationButton"
				android:id="@+id/btn_sectors"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				android:background="@color/nav_sectors_button" />

			<View
				style="@style/NavigationLine"
				android:background="@color/nav_sectors_line" />
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>