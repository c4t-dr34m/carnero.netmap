<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<FrameLayout
		android:id="@+id/fragment_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<RelativeLayout
		android:id="@+id/actionbar_background"
		android:layout_width="match_parent"
		android:layout_height="64dp"
		android:orientation="horizontal">

		<LinearLayout
			android:id="@+id/btn_operator_container"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:orientation="vertical">

			<View style="@style/NavigationSpacer" />

			<TextView
				style="@style/NavigationButton"
				android:id="@+id/btn_operator"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				android:paddingBottom="0dp"
				android:background="@color/nav_button" />

			<View style="@style/NavigationLine" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/btn_markers_container"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:orientation="vertical">

			<View style="@style/NavigationSpacer" />

			<ImageButton
				style="@style/NavigationButton"
				android:id="@+id/btn_markers"
				android:src="@drawable/ic_ab_markers" />

			<View style="@style/NavigationLine" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/btn_sectors_container"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_toRightOf="@id/btn_operator_container"
			android:layout_toLeftOf="@id/btn_markers_container"
			android:orientation="vertical">

			<View style="@style/NavigationSpacer" />

			<TextView
				style="@style/NavigationButton"
				android:id="@+id/btn_sectors"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				android:paddingBottom="0dp"
				android:gravity="left" />

			<View style="@style/NavigationLine" />
		</LinearLayout>

	</RelativeLayout>
</RelativeLayout>