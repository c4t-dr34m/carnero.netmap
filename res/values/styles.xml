<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="NetMap" parent="android:Theme.Holo.NoActionBar">
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="NavigationSpacer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_weight">1</item>
	</style>

	<style name="NavigationButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:gravity">bottom|center_horizontal</item>
	</style>

	<style name="NavigationLine">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">2dp</item>
	</style>

	<style name="SectorInfo" />

	<style name="SectorInfo.Coords">
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">@color/white_semi</item>
		<item name="android:fontFamily">sans-serif-thin</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">3</item>
		<item name="android:shadowColor">@color/black_semi</item>
	</style>

	<style name="SectorInfo.Label">
		<item name="android:textSize">32dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:fontFamily">sans-serif-thin</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">5</item>
		<item name="android:shadowColor">@color/black</item>
	</style>
</resources>